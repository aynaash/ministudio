# MiniStudio Configuration Template
# Copy this file to .env and fill in your credentials
# NEVER commit .env to version control!

# ============================================================================
# VIDEO GENERATION PROVIDERS
# ============================================================================

# Vertex AI (Google Cloud) - Recommended for cloud
VERTEX_AI_API_KEY=your-vertex-ai-api-key-here
VERTEX_AI_PROJECT_ID=your-gcp-project-id
VERTEX_AI_LOCATION=us-central1

# Hugging Face - For local or cloud-based model hosting
HF_API_TOKEN=your-huggingface-token-here

# Local Model Path - For offline inference
LOCAL_MODEL_PATH=/path/to/your/local/model

# OpenAI Sora (when available)
SORA_API_KEY=your-sora-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Kling AI
KLING_API_KEY=your-kling-api-key-here

# Luma AI
LUMA_API_KEY=your-luma-api-key-here

# Custom Provider Endpoint
CUSTOM_PROVIDER_URL=http://localhost:8000
CUSTOM_PROVIDER_API_KEY=optional-api-key

# ============================================================================
# AUDIO & TEXT-TO-SPEECH
# ============================================================================

# Google Cloud Text-to-Speech
GOOGLE_TTS_KEY=your-google-tts-key-here
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ElevenLabs (for advanced voice synthesis)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# ============================================================================
# CLOUD PROVIDER CREDENTIALS
# ============================================================================

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# GCP (alternative to GOOGLE_APPLICATION_CREDENTIALS)
GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com

# Azure
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_KEYVAULT_URL=https://your-keyvault.vault.azure.net/

# ============================================================================
# SECRET MANAGER (Optional, for production)
# ============================================================================

# Doppler (https://www.doppler.com/)
# Set this if you use Doppler for secret management
# Then run: doppler run -- python your_script.py
DOPPLER_CONFIG=production

# AWS Secrets Manager
AWS_SECRETS_MANAGER_REGION=us-east-1

# GCP Secret Manager
GCP_SECRET_MANAGER_PROJECT_ID=your-gcp-project-id

# Azure Key Vault
AZURE_KEYVAULT_NAME=your-keyvault-name

# ============================================================================
# MINISTUDIO CONFIGURATION
# ============================================================================

# Default provider (vertex_ai, huggingface, local, custom)
DEFAULT_PROVIDER=vertex_ai

# Default TTS provider (google, elevenlabs)
DEFAULT_TTS_PROVIDER=google

# Video quality preset (fast, balanced, high)
QUALITY_PRESET=high

# Enable continuity mode (true/false)
CONTINUITY_ENABLED=true

# Default video format
VIDEO_FORMAT=mp4

# Default resolution
VIDEO_WIDTH=512
VIDEO_HEIGHT=512

# Video FPS
VIDEO_FPS=8

# ============================================================================
# LOGGING & DEBUG
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable detailed logging for providers
DEBUG_PROVIDERS=false

# Enable performance profiling
ENABLE_PROFILING=false

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================

# Use mock provider for testing (true/false)
USE_MOCK_PROVIDER=false

# Cache generated videos locally
VIDEO_CACHE_DIR=./video_cache

# Maximum cache size (in MB)
MAX_CACHE_SIZE_MB=5000

# ============================================================================
# ADVANCED FEATURES (Experimental)
# ============================================================================

# Enable LoRA grounding (character identity fine-tuning)
ENABLE_LORA_GROUNDING=false

# Enable ControlNet (pose/depth/canny control)
ENABLE_CONTROLNET=false

# Enable audio-sync optimization
ENABLE_AUDIO_SYNC=true

# ============================================================================
# DEPLOYMENT & INFRASTRUCTURE
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# API Rate Limit (requests per minute)
RATE_LIMIT_RPM=60

# Timeout for API calls (seconds)
API_TIMEOUT_SECONDS=300

# Number of parallel generation workers
PARALLEL_WORKERS=4
